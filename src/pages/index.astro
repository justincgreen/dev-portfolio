<style lang="scss">
  .c-grid-block {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    
    &__item {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 300px;
      border-radius: 20px;
      background: rgb(255 255 255 / 5%);
      border-bottom: 1px solid rgb(255 255 255 / 10%);
      backdrop-filter: blur(6px);
    }
  }
</style>