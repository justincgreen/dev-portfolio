---

<Layout title="Justin Green | Developer">
	<main class="margin--top--lg">
    <!-- <h1 class="font-size--jumbo">Hello I'm Justin</h1> -->
    
    <div class="container container--lg">
      <div class="c-grid-block">
        <div class="c-grid-block__item">About Me</div>
        <div class="c-grid-block__item">Projects</div>
        <div class="c-grid-block__item">Resume</div>
